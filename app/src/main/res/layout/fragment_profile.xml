<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="10dp"
        android:src="@drawable/profilepng"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
        <ImageView
            android:id="@+id/icnName"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/name1"
            android:layout_below="@+id/imgProfile"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soham Parab"
        android:layout_below="@+id/imgProfile"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#42A5F5"
        android:textStyle="bold"/>
        <ImageView
            android:id="@+id/icnMail"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/mail"
            android:layout_below="@id/icnName"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="42dp"
            android:layout_toRightOf="@+id/icnMail"
            android:text="sohamparab1003@gmail.com"
            android:textColor="#42A5F5"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/icnPhone"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/phone"
            android:layout_below="@id/icnMail"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            />
    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9307377878"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/email"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="#42A5F5"/>


    </RelativeLayout>

</ScrollView>

